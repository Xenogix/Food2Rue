<div class="d-flex flex-column justify-content-center h-100 px-5 py-3">
    <nav class="nav-background flex-column justify-content-center rounded-pill" style="width: 3rem; overflow:visible">
        <div class="nav-item py-2">
            <NavLink class="nav-link d-inline-flex" href="" Match="NavLinkMatch.All">
                <i class="fa-solid fa-house my-auto me-3" style="width: 1rem"></i>
                <div class="nav-text">
                    <p class="my-0 ms-2">Home</p>
                </div>
            </NavLink>
        </div>
        <div class="nav-item py-2">
            <NavLink class="nav-link d-inline-flex" href="counter">
                <i class="fa-solid fa-address-card my-auto me-3" style="width: 1rem"></i>
                <div class="nav-text">
                    <p class="my-0 ms-2">Profile</p>
                </div>
            </NavLink>
        </div>
        <div class="nav-item py-2">
            <NavLink class="nav-link d-inline-flex" href="fetchdata">
                <i class="fa-solid fa-square-plus my-auto me-3" style="width: 1rem"></i>
                <div class="nav-text">
                    <p class="my-0 ms-2">Post</p>
                </div>
            </NavLink>
        </div>
        <div class="nav-item py-2">
            <AuthorizeView>
                <Authorized>
                    <NavLink class="nav-link d-inline-flex" href="fetchdata">
                        <i class="fa-solid fa-key my-auto me-3" style="width: 1rem"></i>
                        <div class="nav-text">
                            <p class="my-0 ms-2">Welcome @context.User?.Identity?.Name</p>
                        </div>
                    </NavLink>
                </Authorized>
                <NotAuthorized>
                    <NavLink class="nav-link d-inline-flex" href="fetchdata">
                        <i class="fa-solid fa-key my-auto me-3" style="width: 1rem"></i>
                        <div class="nav-text">
                            <p class="my-0 ms-2">Login</p>
                        </div>
                    </NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
