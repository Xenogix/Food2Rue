@page "/login"

<div class="h-100 d-flex flex-column justify-content-center">
    <div class="w-100 login-card p-5" style="max-width: 32rem;">
        <form FormName="login">
            <h3 class="my-5">Sign into you account</h3>

            <form class="needs-validation" @onsubmit="SignInAsync">

                <!-- Email input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="emailField">Email address</label>
                    <input type="email" id="emailField" class="form-control" @bind-value="email" required/>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="passwordField">Password</label>
                    <input type="password" id="passwordField" class="form-control" @bind-value="password" required/>
                </div>

                <p class="text-danger" style="visibility: @(loginHasFailed ? "visible" : "hidden")">The account does not exists or the password is incorrect</p>

                <input type="submit" class="btn btn-primary btn-block mb-4" value="Sign in" />
            </form>

            <div class="text-center">
                <p>Not a member? <a href="/register">Register</a></p>
            </div>
        </form>
    </div>
</div>