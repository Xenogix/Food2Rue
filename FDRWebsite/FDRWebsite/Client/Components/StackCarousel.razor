<div class="position-relative w-100" style="padding-bottom:100%">

    @for (int i = GetTopIndex(); i >= Math.Max(currentIndex - 1, 0); --i)
    {
        <div class="carousel-image" style="
            top: @((i-currentIndex)*HEIGHT_SHIFT)px; bottom: @((i-currentIndex)*HEIGHT_SHIFT)px; left: @((i-currentIndex)*RIGHT_SHIFT)px;
            @(i == currentIndex - 1 ? "opacity: 0; pointer-events: none;" : "")
            background-image:url(@(Medias.ElementAt(i).URL_Source))">
        </div>
    }
    <button @onclick="MoveNext" style="height: 2rem"></button>
</div>