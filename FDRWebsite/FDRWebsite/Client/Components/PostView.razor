<div class="w-100">

    <!-- User profile -->
    <div class="d-flex w-100 mb-3 gap-3">
        <div style="width: 3rem; height: 3rem">
            <ProfilePicture ImageURL="@user?.Photo_Profil?.URL_Source"></ProfilePicture>
        </div>
        <div class="d-flex flex-column justify-content-center">
            <p class="m-0">@(user?.Pseudo ?? string.Empty)</p>
        </div>
        <div class="d-flex flex-column justify-content-center">
            <p class="m-0">@(Post.Date_Publication.ToString("yyyy-MM-dd") ?? string.Empty)</p>
        </div>
    </div>

    <!-- Description-->
    <h4 class="mt-2">@Post.Texte</h4>
    
    <div class="p-4">

        <!-- Media carousel -->
        <StackCarousel Medias="Post.Images"></StackCarousel>

        <!-- Interaction buttons -->
        <div class="d-flex position-relative mx-4 interaction-box overflow-hidden">
            <div class="interaction-button" role="button" @onclick="OnLikeClickAsync">
                <i class="fa-solid fa-heart" style="@(liked ? "color: red" : "" )"></i>
                <p>@Post.Aime</p>
            </div>
            <div class="interaction-button" role="button" @onclick="OnCommentClick">
                <i class="fa-solid fa-message"></i>
                <p>@Post.Commentaires</p>
            </div>
        </div>

    </div>

    <!-- Padding for bottom content -->
    <div class="mb-5"></div>

</div>